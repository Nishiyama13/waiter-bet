generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Participant {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String @unique
  balance Int
  Bet Bet[]

  @@map("participants")
}

model Game {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  homeTeamName String
  awayTeamName String
  homeTeamScore Int
  awayTeamScore Int
  isFinished Boolean
  Bet Bet[]

  @@map("games")
}

model Bet {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  homeTeamScore Int
  awayTeamScore Int
  amountBet Int
  Game Game? @relation(fields: [gameId], references: [id])
  gameId Int
  Participant Participant? @relation(fields: [participantId], references: [id])
  participantId Int
  status String
  amountWon Int?

  @@map("bets")
}
